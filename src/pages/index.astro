---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Inicio - Repostería D'Rossy">
  <link rel="stylesheet" href="/src/styles/index.css" />

  <!-- Sección Hero -->
  <section class="bg-gradient-to-r from-yellow-100 to-orange-200 rounded-2xl p-8 md:p-12 flex flex-col md:flex-row items-center gap-8 shadow-xl">
    <div class="flex-1 text-center md:text-left">
      <!-- Logo -->
      <div class="flex justify-center md:justify-start mb-6">
        <img
          src="/img/image.png"
          alt="Logo Repostería D'Rossy"
          class="w-32 h-32 rounded-full shadow-xl hover:scale-105 transition-transform duration-500"
        />
      </div>

      <!-- Texto principal -->
      <h1 class="text-4xl md:text-5xl font-extrabold text-orange-600 tracking-wide mb-4">Pastelería artesanal para tus momentos especiales</h1>
      <p class="text-lg md:text-xl text-gray-700 mb-6">Pasteles, cupcakes y postres hechos con ingredientes frescos y muchísimo cariño.</p>
      
      <div class="mt-6 flex gap-4 justify-center md:justify-start">
        <a href="/catalogo" class="px-6 py-3 bg-orange-600 text-white rounded-lg shadow-md hover:bg-orange-700 transition-colors">
          Ver catálogo
        </a>
        <a href="/nosotros" class="px-6 py-3 border-2 border-orange-600 text-orange-600 rounded-lg shadow-md hover:bg-orange-100 transition-colors">
          Conócenos
        </a>
      </div>
    </div>

    <!-- Imagen principal -->
    <div class="w-full md:w-96">
      <img src="/img/LocalRossy.png" alt="Local de la pastelería" class="rounded-xl shadow-xl object-cover w-full h-64 md:h-80"/>
    </div>
  </section>

  <!-- Productos Destacados -->
  <section class="mt-16">
    <h2 class="text-3xl font-bold text-center text-orange-600 mb-8">Productos destacados</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Producto 1 -->
      <article class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-shadow">
        <img src="/img/bob-esponja.png" alt="Pastel de tres leches" class="w-full h-48 object-cover"/>
        <div class="p-4">
          <h3 class="text-xl font-semibold text-gray-800">Pastel de tres leches</h3>
          <p class="text-sm text-gray-500">Rico pastel de tres leches con ganache.</p>
          <div class="flex justify-between mt-4">
            <div class="text-lg font-bold text-orange-600">$55.00</div>
            <a href="/catalogo" class="text-orange-600 font-bold hover:text-orange-700 transition-colors">Ver más</a>
          </div>
        </div>
      </article>

      <!-- Producto 2 -->
      <article class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-shadow">
        <img src="/img/PasttelPVZ.png" alt="Selva Negra" class="w-full h-48 object-cover"/>
        <div class="p-4">
          <h3 class="text-xl font-semibold text-gray-800">Selva Negra</h3>
          <p class="text-sm text-gray-500">Personalizado de PVZ.</p>
          <div class="flex justify-between mt-4">
            <div class="text-lg font-bold text-orange-600">$58.00</div>
            <a href="/catalogo" class="text-orange-600 font-bold hover:text-orange-700 transition-colors">Ver más</a>
          </div>
        </div>
      </article>

      <!-- Producto 3 -->
      <article class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-shadow">
        <img src="/img/corona.png" alt="Torta de frutas" class="w-full h-48 object-cover"/>
        <div class="p-4">
          <h3 class="text-xl font-semibold text-gray-800">Torta de frutas</h3>
          <p class="text-sm text-gray-500">Fresca y ligera.</p>
          <div class="flex justify-between mt-4">
            <div class="text-lg font-bold text-orange-600">$48.00</div>
            <a href="/catalogo" class="text-orange-600 font-bold hover:text-orange-700 transition-colors">Ver más</a>
          </div>
        </div>
      </article>
    </div>
  </section>

  <!-- Botón de login -->
  <div class="mt-16 text-center">
    <a href="/login" class="px-6 py-3 bg-blue-600 text-white rounded-lg shadow-md hover:bg-blue-700 transition-colors">
      Iniciar sesión
    </a>
  </div>

  <script type="module">
    import CartClient from '../components/CartClient.jsx';
  </script>
</BaseLayout>
